<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_image_gridview_songlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ee85cece"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="#afd1c9c9"
        android:elevation="4dp">
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tv_songname_gridview_songlist"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Song name"
            android:textSize="16dp"
            android:textColor="#34383d"
            android:maxLines="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:id="@+id/tv_artistname_gridview_songlist"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="-10dp"
            android:textSize="12dp"
            android:textColor="#2b2c2d"
            android:fontFamily="sans-serif-condensed"
            android:text="Artist Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
    </LinearLayout>
</LinearLayout>