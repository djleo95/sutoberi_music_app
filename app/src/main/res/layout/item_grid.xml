<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_image_gridview_songlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#cda5caca"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#8bded7d7"
        android:elevation="4dp">
        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/tv_songname_gridview_songlist"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Song name"
            android:textSize="16dp"
            android:textColor="#34383d"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-5dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:id="@+id/tv_artistname_gridview_songlist"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:textColor="#2b2c2d"
            android:fontFamily="sans-serif-condensed"
            android:text="Artist Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >
    </LinearLayout>
</LinearLayout>